export const getStaticPaths = async () => {
  const projects = await Astro.glob("../../content/*.md");

  return projects.map((project) => ({
    params: {
      slug: project.frontmatter.slug,
    },
    props: {
      project,
    },
  }));
}



const { Content,frontmatter } = Astro.props.project

const { slug } = Astro.params

---
<MainLayout title={frontmatter.title} description={"shit"}>
   <Content  /> 
   <ProjectDetails client:load video={frontmatter.video} title={frontmatter.title} />
</MainLayout>
